{
  "tabWidth": 2,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
